{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"ignorePatterns": ["build/", "dist/", "run/lib/hotreload.js"],
	"rules": {
		"prettier/prettier": ["error"],
		"import/extensions": [0, { "js": "always" }],
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": ["**/run/**"]
			}
		]
	}
}
