{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/extensions": [
            0, { "js": "always" }
        ],
        "import/no-extraneous-dependencies":[
            "error",
            {
                "devDependencies":[
                    "**/config/webpack/**",
                    "**/run/**"
                ]
            }
        ]
    },
    "ignorePatterns": [
        "**/out/",
        "**/run/scripts/hotreload.js"
    ]
}